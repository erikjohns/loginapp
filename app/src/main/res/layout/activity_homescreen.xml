<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/big_app_title"
                android:textColor="@color/black"
                android:textSize="64sp"
                android:fontFamily="@font/aloevera"
                android:id="@+id/title"
                android:textAlignment="center"
                android:lineSpacingExtra="-18dp"
                />

            <EditText
                android:id="@+id/editTextTextUpdateName"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:gravity="center"
                android:hint="Update Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                style="@style/editText"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/submitUpdate"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextTextUpdateName"
                android:layout_centerHorizontal="true"
                android:text="Update"
                android:visibility="visible"
                android:textColor="@color/white"
                android:fontFamily="@font/headlandone"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@drawable/continue_button"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
